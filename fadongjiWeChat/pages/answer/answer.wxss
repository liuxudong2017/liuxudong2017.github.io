/* pages/answer/answer.wxss */
@import '../../utils/public.wxss';
page{
  background: #e7e7e7;
}
.wx-module-1{
  margin:30rpx auto 60rpx;
}
.wx-answer-num-wrap{
  width:100%;
  height: 200rpx;
  overflow-x: hidden;
  padding-left: 2.5%;
  position: relative;

}
.wx-answer-num-wrap .wx-ul{
  position: absolute;
  top:72rpx;
  width:100%;
  height: 8rpx;
  background: #fff;
}
.wx-answer-num-wrap .wx-li{
  position: absolute;
  top:-18rpx;
  width:30rpx;
  height:30rpx;
  border-radius: 50%;
  background: #fff;
  border:8rpx solid #f4f4f4;
}
.wx-answer-num-wrap .wx-li text{
  position:absolute;
  top:50rpx;
}
.wx-answer-num-wrap .wx-li .wx-img{
  position: absolute;
  top:-50rpx;
  width:37rpx;
  height:37rpx;
 
}
.wx-answer-num-wrap .bgcolor{
  background: #ffce45;
  z-index: 99;
}
.wx-answer-num-wrap .bgcolor .wx-li{
  background: #ffce45;
  border:8rpx solid #edd791;

}
.wx-answer-num-wrap .wx-box{
  position: absolute;
  height:100%;
  overflow: hidden;
}
/* 倒计时 */
.wx-count-wrap{
  margin:0 auto;
  width:200rpx;
	height: 200rpx;
  text-align: center;
  line-height: 190rpx;
  font-size:80rpx;
  position: relative;
		left: 0;
		top:0;
		border-radius: 50%;
		border:8rpx solid #e7e7e7;
		box-sizing: border-box;
}
.wx-count-wrap .wx-left-box{
    position: absolute;
		left:-5rpx;
		top:-5rpx;
		width:200rpx;
		height: 200rpx;
		clip: rect(0rpx 100rpx 200rpx 0rpx);
		overflow: hidden;
		box-sizing: border-box;
}
.wx-count-wrap .wx-box-l{
    position: absolute;
		width:200rpx;
		height:200rpx;
		border:8rpx solid #7efaff;
		border-radius: 50%;
		clip: rect(0rpx 100rpx 200rpx 0rpx);
		/* animation:countTime 5s linear 5s forwards; */
		box-sizing: border-box;
}
.wx-count-wrap .wx-right-box{
    position: absolute;
		left:-5rpx;
		top:-5rpx;
		width:200rpx;
		height: 200rpx;
		clip: rect(0rpx 200rpx 200rpx 100rpx);
		overflow: hidden;
		box-sizing: border-box;
}
.wx-count-wrap .wx-box-r{
    position: absolute;
		width:200rpx;
		height:200rpx;
		border:8rpx solid #7efaff;
		border-radius: 50%;
		clip: rect(0px 200rpx 200rpx 100rpx);
		/* animation:countTime 5s linear forwards; */
		box-sizing: border-box;
}
@keyframes countTime {
  0%{
			transform:rotate(0deg);
		}
		100%{
			transform:rotate(180deg);
		}
}
.animation-left{
  animation:countTime 5s linear 5s forwards;
}
.animation-right{
  animation:countTime 5s linear forwards;
}
.wx-module-2{
  width:95%;
  margin:0 auto;
  box-sizing: border-box;
  background: #fff;
  border-radius: 15rpx;
  padding:30rpx;
}
.wx-module-2 .wx-title{
  font-size: 37rpx;
  color:#231815;
  text-align: center;
  margin:44rpx auto 80rpx; 
  font-weight: 600;
}
.wx-group .wx-item .wx-item-li{
  height: 94rpx;
  line-height: 94rpx;
  color:#595757;
  font-size:37rpx;
  box-sizing: border-box;
  border:1rpx solid #c0c1c1;
  margin-bottom:35rpx;
  border-radius: 55rpx;
  padding: 0 30rpx
}
.wx-group .wx-item{
  position: relative;
}
.wx-group .wx-item .wx-true{
  background:#ffce45;
  border:0;
}
.wx-group .wx-true .wx-true-icon{
  display: block;
  float:right;
  width:40rpx;
  height:40rpx;
  border:10rpx solid #fff;
  margin-top:18rpx;
  border-radius:50%;

}
.wx-group .wx-item .wx-true .wx-flase-icon{
  display: none;
}
.wx-group .wx-item .wx-flase .wx-true-icon{
  display: none;
}
.wx-group .wx-item .wx-flase .wx-flase-icon{
  float: right;
  width:60rpx;
  height:60rpx;
  position: relative;

}
.wx-group .wx-item .wx-flase{
  background: #a275e3;
}
.wx-group .wx-item .wx-flase .wx-flase-icon text{
  display: block;
  width:8rpx;
  height:40rpx;
  background: #fff;
  position: absolute;
  top:30rpx;
  transform: rotate(45deg);
}
.wx-group .wx-item .wx-flase .wx-flase-icon .wx-icon-2{
  transform: rotate(-45deg);
}
.wx-answer-num{
  text-align: center;
}
